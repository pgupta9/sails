<!DOCTYPE html>
<html lang="en">
<head>
  <title>Bootstrap Example</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  <link rel="stylesheet" href="https://ajax.googleapis.com/ajax/libs/angular_material/1.0.0/angular-material.min.css">
      <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.8/angular.min.js"></script>
      <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.8/angular-animate.min.js"></script>
      <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.8/angular-aria.min.js"></script>
      <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.8/angular-messages.min.js"></script>
      <script src="https://ajax.googleapis.com/ajax/libs/angular_material/1.0.0/angular-material.min.js"></script>
  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.4.1/js/bootstrap-datepicker.min.js"></script>
 
<script src="https://cdnjs.cloudflare.com/ajax/libs/angular-ui-mask/1.8.3/mask.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.4.1/css/bootstrap-datepicker3.css"/>

<style type="text/css">
  
  body{
    top:60px;
  }

  #us{
    position:relative;
    text-align: right;
    top:35px;
  }

.header-row button{
  display:block;
  border:none;
  background-color:yellow;

}
.header-row{
  background-color: blue;

}


.form-group{


}

</style>





</head>



<body ng-app="myapp" ng-controller="myCtrl">

<h1>
 
<%- hding %>
 

</h1>




<table class="table table-striped table-hover">
<thead>
<tr class="header-row">

<th>
  <button ng-click="sortBy('cost')" data-toggle="tooltip" data-placement="bottom" title="Tooltip on left" class="btn-tooltip">Cost</button>
        <span class="sortorder" ng-show="propertyName === 'cost'" ng-class="{reverse: reverse}"></span>

   
</th>
<th>
  <button ng-click="sortBy('SDT')" >SDT</button>
        <span class="sortorder" ng-show="propertyName === 'SDT'" ng-class="{reverse: reverse}"></span>

   
</th>
<th>
  <button ng-click="sortBy('UIC')"  >UIC</button>
        <span class="sortorder" ng-show="propertyName === 'UIC'" ng-class="{reverse: reverse}"></span>
</th>
<th><button ng-click="sortBy('FBN')" >FBN</button>
        <span class="sortorder" ng-show="propertyName === 'FBN'" ng-class="{reverse: reverse}"></span>
        </th>

  
<% if (showshow) { %>
<th>
 

</th>
<% } %>

<% if (showedit) { %>
<th>
  
</th>
<% } %>

</tr>
<tr>
<th>
<div class="search">
<input type="text" ng-model="SA['cost']" class="form-control" placeholder="cost">

</div>
</th>
<th>
<div class="form-group has-feedback">
<input type="text" ng-model="SB['SDT']" class="form-control" placeholder="Search SDT">
<i class="glyphicon glyphicon-search form-control-feedback"></i>
</div>
</th>
<th>
<div class="form-group has-feedback">
<input type="text" ng-model="SC['UIC']" class="form-control" placeholder="Search UIC">
<i class="glyphicon glyphicon-search form-control-feedback"></i>
</div>
</th>
<th>
<div class="form-group has-feedback">
<input type="text" ng-model="SD['FBN']" class="form-control" placeholder="Search FBN">
<i class="glyphicon glyphicon-search form-control-feedback"></i>
</div>
</th>

<% if (showshow) { %>
<th>
</th>
<% } %>

<% if (showedit) { %>
<th>
</th>
<% } %>
</tr>

</thead>
<tbody>
<tr>
  
</tr>
<tr ng-repeat="user in users|orderBy:propertyName:reverse|filter:SA|filter:SB|filter:SC|filter:SD|filter:usearch">
<td>{{user.cost}}</td>
<td> {{user.SDT}} </td>

<td> {{user.UIC}} </td>
<td> {{user.FBN}}</td>

 <% if (showshow) { %>
<td><a href="/user/show/{{user.id}}" class="btn btn-sm btn-primary">Show</a></td>
<% } %>
<% if (showedit) { %>
<td><a href="/user/edit2/{{user.id}}" class="btn btn-sm btn-warning">Edit</a></td>
<% } %>



</tr>

</tbody>


</table>


<script>

var app=angular.module('myapp',[]);
app.controller("myCtrl",function($scope,$http){

$scope.users = <%- JSON.stringify(users) %>;
$scope.hding = <%- JSON.stringify(hding) %>;
//$scope.showedit = <%- JSON.stringify(showedit) %>;


$scope.propertyName = 'SDT';
  $scope.reverse = true;
  $scope.sortBy = function(propertyName) {
    $scope.reverse = ($scope.propertyName === propertyName) ? !$scope.reverse : false;
    $scope.propertyName = propertyName;
  };

$scope.search="";
$scope.crit=["cost","SDT","UIC","FBN"];


});

</script>
<script>
$('.btn-tooltip').tooltip();
</script>

</body>
</html>
